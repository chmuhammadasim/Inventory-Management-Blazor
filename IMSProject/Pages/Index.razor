@page "/"

<PageTitle>Khata(Hisab)</PageTitle>
@inject IJSRuntime JSRuntime
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Reset some default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Apply styles to the section with background color and text color */
        .bg-gray-900 {
            background-color: #1a202c; /* Replace with your desired color */
            color: #ffffff; /* Replace with your desired text color */
        }

        /* Center the content and set max-width for larger screens */
        .mx-auto {
            margin-left: auto;
            margin-right: auto;
        }

        .max-w-screen-xl {
            max-width: 1280px; /* Adjust as needed */
        }

        /* Add padding to the section */
        .px-4 {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .py-32 {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

        /* Style the heading with a gradient text */
        .bg-gradient-to-r {
            background: linear-gradient(to right, #68d391, #4299e1, #9f7aea); /* Replace with your desired gradient colors */
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .text-3xl {
            font-size: 1.875rem; /* Adjust as needed */
        }

        .font-extrabold {
            font-weight: 800;
        }

        .text-transparent {
            color: transparent;
        }

        .sm\\:text-5xl {
            font-size: 2.5rem; /* Adjust as needed */
        }

        /* Style the paragraph */
        .mt-4 {
            margin-top: 1rem;
        }

        .max-w-xl {
            max-width: 36rem; /* Adjust as needed */
        }

        .sm\\:text-xl\\relaxed {
            font-size: 1.25rem; /* Adjust as needed */
            line-height: 1.625;
        }

        /* Style the buttons */
        .mt-8 {
            margin-top: 2rem;
        }

        .flex {
            display: flex;
        }

        .flex-wrap {
            flex-wrap: wrap;
        }

        .justify-center {
            justify-content: center;
        }

        .gap-4 {
            gap: 1rem; /* Adjust as needed */
        }

        .block {
            display: block;
        }

        .rounded {
            border-radius: 0.25rem; /* Adjust as needed */
        }

        .border {
            border-width: 1px;
        }

        .border-blue-600 {
            border-color: #4299e1; /* Replace with your desired border color */
        }

        .bg-blue-600 {
            background-color: #4299e1; /* Replace with your desired background color */
            color: #ffffff; /* Replace with your desired text color */
        }

        .px-12 {
            padding-left: 3rem;
            padding-right: 3rem;
        }

        .py-3 {
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
        }

        .text-sm {
            font-size: 0.875rem; /* Adjust as needed */
        }

        .font-medium {
            font-weight: 500;
        }

        .hover\\:bg-transparent:hover {
            background-color: transparent !important;
        }

        .hover\\:text-white:hover {
            color: #ffffff !important; /* Replace with your desired text color */
        }

        .hover\\:bg-blue-600:hover {
            background-color: #4299e1 !important; /* Replace with your desired background color */
        }

        .focus\\:outline-none:focus {
            outline: none;
        }

        .focus\\:ring:focus {
            box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5); /* Adjust as needed */
        }

        .active\\:text-opacity-75:active {
            opacity: 0.75; /* Adjust as needed */
        }

        .sm\\:w-auto {
            width: auto !important;
        }
    </style>
</head>
<body>

    <section class="bg-gray-900 text-white">
        <div class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center">
            <div class="mx-auto max-w-3xl text-center">
                <h1 style="font-size:42px" class="bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 bg-clip-text text-3xl font-extrabold text-transparent sm:text-5xl">
                    Welcome to
                    <span class="sm:block"> Khata webapp </span>
                </h1>

                <p class="mx-auto mt-4 max-w-xl sm:text-xl/relaxed">
                    Khata App is used to oversee a shop's inventory, which includes manufacturing, ordering, storing, and selling procedures for goods in the marketplace. This involves overseeing the processing and storage of components, raw materials, and final goods.
                </p>
            </div>
        </div>
    </section>
    <div class="backCustom2" style="margin:10px;text-align:center">
        <h3>Shop</h3>
    </div>
    <div id="map" style="height:500px;width:100%;"></div>
    <script>
        function initialize() {
            var latlng = new google.maps.LatLng(33.7133683, 73.0242994);
            var options = {
                zoom: 18, center: latlng,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById("map"), options);
        }
    </script>
</body>
</html>


@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initialize", null);
        }
    }
}
